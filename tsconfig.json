{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "esnext",
    "module": "node16",
    "verbatimModuleSyntax": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
